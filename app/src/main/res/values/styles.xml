<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BuildRadioButtonStyle">
        <item name="android:layout_width">264dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/build_radio_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:radioButtonStyle">@color/hp_red</item>
       <item name="android:button">@null</item>
    </style>

    <style name="BossNameStyle">
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:text">Boss Name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PlayerCards">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OverlayBackgroundView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#B3000000</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="OverlayTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:visibility">gone</item>

        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="OverlayPrimaryButton">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:visibility">gone</item>

        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

</resources>

