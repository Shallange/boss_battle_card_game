<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment"
    tools:background="@color/bg_dark">


    <View
        android:id="@+id/viewPlayerHp"
        android:layout_width="341dp"
        android:layout_height="36dp"
        android:background="@drawable/hp_bar_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <View
        android:id="@+id/viewPlayerHpFill"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:background="@color/hp_green"
        app:layout_constraintBottom_toBottomOf="@+id/viewPlayerHp"
        app:layout_constraintStart_toStartOf="@+id/viewPlayerHp"
        app:layout_constraintTop_toTopOf="@+id/viewPlayerHp"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>